<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ftsdocs.view.controller.SettingsController">
  <left>
    <fx:include source="menu.fxml" />
  </left>
  <center>
    <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" styleClass="background" BorderPane.alignment="CENTER">
      <BorderPane.margin>
        <Insets bottom="10.0" top="10.0" />
      </BorderPane.margin>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
      </padding>
      <Label style="-fx-font-weight: bold;" text="Settings">
        <font>
          <Font size="20.0" />
        </font>
        <VBox.margin>
          <Insets bottom="22.0" top="9.0" />
        </VBox.margin>
      </Label>
      <PropertySheet fx:id="propertySheet" mode="CATEGORY" modeSwitcherVisible="false" VBox.vgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
      </PropertySheet>
      <HBox alignment="CENTER_RIGHT" fillHeight="false" nodeOrientation="LEFT_TO_RIGHT" spacing="20.0" VBox.vgrow="NEVER">
        <padding>
          <Insets left="10.0" right="10.0" />
        </padding>
        <Button mnemonicParsing="false" onAction="#applyClick" text="Apply">
          <font>
            <Font size="14.0" />
          </font>
        </Button>
            <Button mnemonicParsing="false" onAction="#resetClick" text="Reset">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
        <Button mnemonicParsing="false" onAction="#resetDefaultClick" text="Reset to default">
          <font>
            <Font size="14.0" />
          </font>
        </Button>
      </HBox>

    </VBox>
  </center>
</BorderPane>
