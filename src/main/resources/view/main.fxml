<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0" minWidth="0" prefHeight="600.0" prefWidth="800.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ftsdocs.controller.MainController">
  <left>
    <VBox spacing="20.0" styleClass="background" BorderPane.alignment="CENTER">
      <HBox alignment="CENTER">
        <VBox.margin>
          <Insets />
        </VBox.margin>
        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
          <HBox.margin>
            <Insets left="5.0" right="5.0" />
          </HBox.margin>
          <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </VBox.margin>
        </ImageView>
        <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bold;" text="FTSDocs" textAlignment="CENTER">
          <font>
            <Font size="16.0" />
          </font>
          <HBox.margin>
            <Insets left="5.0" right="5.0" />
          </HBox.margin>
          <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </VBox.margin>
        </Label>
      </HBox>
      <Button alignment="TOP_LEFT" focusTraversable="false" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Home">
        <VBox.margin>
          <Insets left="1.0" />
        </VBox.margin>
        <font>
          <Font size="14.0" />
        </font>
        <graphic>
          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icon/home_icon.png" />
          </ImageView>
        </graphic>
      </Button>
      <Button alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Indexed files">
        <VBox.margin>
          <Insets />
        </VBox.margin>
        <font>
          <Font size="14.0" />
        </font>
        <graphic>
          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icon/files_icon.png" />
          </ImageView>
        </graphic>
      </Button>
      <Button alignment="TOP_LEFT" focusTraversable="false" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Settings">
        <font>
          <Font size="14.0" />
        </font>
        <graphic>
          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icon/settings_icon.png" />
          </ImageView>
        </graphic>
      </Button>
      <Region VBox.vgrow="ALWAYS" />
      <Button fx:id="indexFilesButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#indexFilesButtonClicked" text="Index files">
        <font>
          <Font size="14.0" />
        </font>
      </Button>
      <Button fx:id="indexDirectoriesButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#indexDirectoriesButtonClicked" text="Index directories">
        <font>
          <Font size="14.0" />
        </font>
      </Button>
      <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </BorderPane.margin>
    </VBox>
  </left>
  <center>
    <VBox prefHeight="200.0" prefWidth="100.0" styleClass="background" BorderPane.alignment="CENTER">
      <Label style="-fx-font-weight: bold;" text="Home">
        <font>
          <Font size="20.0" />
        </font>
        <VBox.margin>
          <Insets bottom="22.0" top="9.0" />
        </VBox.margin>
      </Label>
      <HBox alignment="CENTER" spacing="5.0">
        <VBox.margin>
          <Insets bottom="10.0" top="10.0" />
        </VBox.margin>
        <Button fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" mnemonicParsing="false" onMouseClicked="#searchButtonClicked" style="-fx-background-color: transparent;">
          <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
              <Image url="@../icon/search_icon.png" />
            </ImageView>
          </graphic>
          <HBox.margin>
            <Insets />
          </HBox.margin>
        </Button>
        <TextField fx:id="searchTextField" HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets />
          </HBox.margin>
        </TextField>
      </HBox>
      <TableView fx:id="documentTable" minHeight="150.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
        <columns>
          <TableColumn fx:id="documentNameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="205.0" prefWidth="205.0" resizable="false" text="Name" />
