          <TableColumn fx:id="documentCreationTimeColumn" editable="false" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Created" />
          <TableColumn fx:id="documentModificationTimeColumn" editable="false" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Modified" />
        </columns>
      </TableView>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="150.0" minHeight="150.0" prefHeight="150.0" style="-fx-border-color: black; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
         <TextFlow fx:id="textFlow">
         </TextFlow>
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
      </ScrollPane>
      <BorderPane.margin>
        <Insets bottom="10.0" top="10.0" />
      </BorderPane.margin>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
      </padding>
    </VBox>
  </center>
</BorderPane>
