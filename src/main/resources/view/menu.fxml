<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" spacing="20.0" styleClass="background" BorderPane.alignment="CENTER"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ftsdocs.controller.MenuController">
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icon/icon.png"/>
            <HBox.margin>
                <Insets left="5.0" right="5.0"/>
            </HBox.margin>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </ImageView>
        <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bold;" text="FTSDocs"
               textAlignment="CENTER">
            <font>
                <Font size="20.0"/>
            </font>
            <HBox.margin>
                <Insets left="5.0" right="5.0"/>
            </HBox.margin>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Label>
    </HBox>
    <Button alignment="TOP_LEFT" focusTraversable="false" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
            onAction="#homeClick" text="Home">
        <VBox.margin>
            <Insets left="1.0"/>
        </VBox.margin>
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../icon/light/home_icon.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#indicesClick"
            text="Indices">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icon/light/files_icon.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#settingsClick"
            text="Settings">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icon/light/settings_icon.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Region VBox.vgrow="ALWAYS"/>
    <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
            onMouseClicked="#indexFilesButtonClicked" text="Index files">
    </Button>
    <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
            onMouseClicked="#indexDirectoriesButtonClicked" text="Index directory">
    </Button>
    <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </BorderPane.margin>
</VBox>
